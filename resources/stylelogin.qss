/* =====================
   Global Font & Colors
===================== */
* {
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    color: #2c3e50;
}

/* =====================
   QDialog & Frame
===================== */
QDialog {
    background-color: #ffffff;
    border-radius: 10px;
}

QFrame#form_frame {
    background-color: #f8f9fa;
    border-radius: 12px;
    padding: 12px;
    border: 1px solid #e9ecef;
    margin: 8px;
    max-width: 450px;
    min-height: 280px;
    max-height: 310px;
}

/* =====================
   QLineEdit
===================== */
QLineEdit {
    padding: 8px 35px 8px 12px;
    border: 1px solid #D1D5DB;
    border-radius: 8px;
    font-size: 13px;
    background-color: white;
    min-height: 20px;
}

QLineEdit:focus {
    border-color: #12B1D1;
    outline: none;
}

QLineEdit#passwordInput:focus { border-color: #e74c3c; }
QLineEdit#passwordInput { padding-right: 35px; }

QLineEdit::placeholder {
    color: #95a5a6;
    font-size: 14px;
}

/* =====================
   QLabel
===================== */


QLabel#registrationInputLabel {
    font-size: 12px;
    margin-bottom: 2px;
    padding: 1px 0px;
    min-height: 14px;
    max-height: 14px;
}

QLabel#keyStatusLabel {
    font-size: 12px;
    font-weight: bold;
    color: #666;
    margin-top: 2px;
}

QLabel#registrationNoticeLabel {
    font-size: 10px;
    color: #7f8c8d;
    padding: 8px;
    background-color: #f8f9fa;
    border-radius: 6px;
    border: 1px solid #e9ecef;
    line-height: 1.4;
}

/* =====================
   QPushButton
===================== */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 #3498db, stop:1 #2980b9);
    color: white;
    border: none;
    padding: 8px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: bold;
    min-height: 28px;
    margin-top: 6px;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 #2980b9, stop:1 #1c5985);
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 #1c5985, stop:1 #2980b9);
}

QPushButton:disabled {
    background-color: #bdc3c7;
    color: #7f8c8d;
}

/* =====================
   QCheckBox
===================== */
QCheckBox {
    font-size: 11px;
    spacing: 6px;
    padding: 3px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border-radius: 4px;
}

QCheckBox::indicator:unchecked {
    border: 2px solid #bdc3c7;
    background-color: white;
}

QCheckBox::indicator:checked {
    border: 2px solid #3498db;
    background-color: #3498db;
    image: url(data:image/svg+xml;base64,);
}

/* =====================
   QProgressBar
===================== */
QProgressBar {
    border: 2px solid #e9ecef;
    border-radius: 8px;
    text-align: center;
    font-size: 12px;
    background-color: #f8f9fa;
    min-height: 20px;
}

QProgressBar::chunk {
    background-color: #3498db;
    border-radius: 6px;
}

QProgressBar#validationProgress {
    border: 1px solid #e9ecef;
    border-radius: 4px;
    background-color: #f8f9fa;
    min-height: 3px;
    max-height: 3px;
}
